<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:name="com.hfad.moviesfun.ItemFragment"
    android:orientation="vertical"
    class="com.hfad.moviesfun.MoviesRecentFragment"
    android:paddingTop="@dimen/main_layout_padding_top"
    android:paddingBottom="@dimen/main_layout_padding_bottom">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/moviesListView"

        android:dividerHeight="0dp"
        android:background="@color/list_background"
        android:divider="@null"
        android:paddingRight="4dp">
    </ListView>

</LinearLayout>
