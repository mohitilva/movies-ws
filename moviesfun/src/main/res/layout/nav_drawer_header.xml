<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorAccent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/drawer_icon"
        android:layout_width="@dimen/nav_drawer_app_icon_width"

        android:scaleType="fitXY"
        android:layout_height="@dimen/nav_drawer_app_icon_height"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="@dimen/drawer_width"
        android:paddingLeft="@dimen/nav_drawer_items_padding_left"
        android:textStyle="bold"
        android:background="@color/light_grey"
        android:textColor="@color/black"

        android:layout_height="@dimen/nav_header_textview_height"
        android:gravity="center_vertical"/>
</LinearLayout>